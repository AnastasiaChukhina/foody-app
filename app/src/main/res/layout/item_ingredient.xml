<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_ingredient_name"
        style="@style/TextViewIngredient"
        android:textSize="16sp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_ingredient_num"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/ingredient_example" />

    <TextView
        android:id="@+id/tv_ingredient_num"
        style="@style/TextViewIngredient"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/ingredient_number_example" />

    <TextView
        android:id="@+id/tv_ingredient_amount"
        style="@style/TextViewIngredient"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/ingredient_amount_example" />

</androidx.constraintlayout.widget.ConstraintLayout>
